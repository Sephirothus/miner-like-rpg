<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*"
        android:background="#55ffffff"
        android:padding="3dp"
        android:layout_marginBottom="10dp">
    <TableRow>
        <TextView android:textSize="20sp" android:textColor="@android:color/holo_green_light" android:id="@+id/lvl"/>
        <TextView android:textSize="20sp" android:textColor="@android:color/holo_red_dark" android:id="@+id/hp"/>
        <TextView android:textSize="20sp" android:textColor="@android:color/holo_blue_dark" android:id="@+id/str"/>
        <TextView android:textSize="20sp" android:id="@+id/steps"/>
    </TableRow>
</TableLayout>